#include <iostream>


using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	for(int i=0; i<t; i++){
	    int num,count=0;
	    cin>>num;
	    int s[num];
	    for(int i=0; i<num; i++){
	        cin>>s[i];
	    }
	    
	    for(int i=0; i<num; i++){
	        count+=abs(s[i+1]-s[i])-1;
	    }
	    cout<<count<<endl;
	}
	return 0;
}
